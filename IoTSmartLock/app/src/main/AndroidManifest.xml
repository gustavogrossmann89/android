<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gustavogr.iotsmartlock">

    <application
        android:name=".FirebaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/iot_smart_lock"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/iot_smart_lock_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="gustavogr.iotsmartlock.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="gustavogr.iotsmartlock.LoginActivity">
        </activity>
        <activity
            android:name="gustavogr.iotsmartlock.SignUpActivity">
        </activity>
        <activity
            android:name="gustavogr.iotsmartlock.ListActivity">
        </activity>
        <activity
            android:name="gustavogr.iotsmartlock.AddNodeActivity">
        </activity>
        <activity
            android:name="gustavogr.iotsmartlock.EditNodeActivity">
        </activity>
        <activity
            android:name="gustavogr.iotsmartlock.NodeActivity">
        </activity>
        <service android:name="org.eclipse.paho.android.service.MqttService"></service>
    </application>

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

</manifest>